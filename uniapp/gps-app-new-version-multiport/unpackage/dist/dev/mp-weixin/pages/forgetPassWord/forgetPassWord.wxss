.uni-container {
    min-height: 100%;
    height: 100%;
    box-sizing: border-box;
}
.hoverStyle {
    opacity: 0.5;
}
uni-button:after {
    border: none;
}
.forget-container {
  padding: 20rpx 64rpx 0 64rpx;
  height: 100%;
  color: #333;
  font-size: 28rpx;
}
.forget-container .form-container {
  background: #fff;
  padding: 0 59rpx;
  border-radius: 16rpx;
  box-shadow: 0px 2rpx 8rpx -2rpx rgba(0, 0, 0, 0.12);
}
.forget-container .form-container > view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid #e2e2e2;
  padding: 72rpx 0 32rpx 0;
}
.forget-container .form-container > view:first-child {
  padding: 50rpx 0 32rpx 0;
}
.forget-container .form-container > view text {
  font-size: 28rpx;
  vertical-align: middle;
  white-space: nowrap;
  color: #333;
}
.forget-container .form-container > view input {
  font-size: 28rpx;
  vertical-align: middle;
}
.forget-container .form-container > view .getAddcode {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.forget-container .form-container > view .getAddcode input {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  line-height: 64rpx;
  height: 64rpx;
}
.forget-container .form-container > view .getAddcode button {
  min-width: 180rpx;
  font-size: 12px;
  height: 64rpx;
  line-height: 64rpx;
}
.forget-container .form-container .button-container {
  border: none;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 52rpx 86rpx;
}
.forget-container .form-container .button-container .btn-cancel {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 64rpx;
  color: #bdbdbd;
  line-height: 64rpx;
}
.forget-container .form-container .button-container .btn-confirm {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.forget-container .form-container .button-container .btn-confirm view {
  float: right;
  height: 64rpx;
  width: 168rpx;
  line-height: 64rpx;
  color: #fff;
  text-align: center;
  background: #bd0202;
  border-radius: 32rpx;
  box-shadow: 0rpx 8rpx 10rpx 0rpx #d54048;
}

